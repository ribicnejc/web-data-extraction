function formatNumber(polje,loc){var obj=document.getElementById(polje);var num=new NumberFormat();num.setInputDecimal(',');num.setNumber(obj.value);num.setPlaces('0');num.setCurrencyValue('EUR');num.setCurrency(false);num.setCurrencyPosition(num.LEFT_OUTSIDE);num.setNegativeFormat(num.LEFT_DASH);num.setNegativeRed(false);num.setSeparators(loc,'.',',');strng=obj.value;if(strng.replace(/[ ]/g,'')!='')obj.value=num.toFormatted();if(obj.value<0)obj.value='';}
